<Application x:Class="Certification_workers.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Certification_workers"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/LightTheme.xaml" x:Name="LightThemeStyle"/>
                <ResourceDictionary Source="Themes/DarkTheme.xaml" x:Name="DarkThemeStyle"/>
                <ResourceDictionary Source="Themes/OtherStyles.xaml"/>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
